<h1>New Game</h1>
<%= @letters %>
<form action="/score" method="POST" data-turbo="false">
  <label>What is the longest word you can find?</label>
  <input class="form-control" type="text" name="word">
  <button type="submit" class="btn mt-3">Play</button>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %> 
</form>
